<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.codedu.controllers.LoginController"
           styleClass="login-root">

    <VBox styleClass="login-card" alignment="CENTER" spacing="10" maxWidth="380">
        <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>

        <!-- Logo -->
        <Label styleClass="login-logo" text="CodEdu"/>
        <Label styleClass="login-tagline" text="Level Up Your Code"/>

        <!-- Spacer -->
        <Label prefHeight="16"/>

        <!-- Email field -->
        <TextField fx:id="emailField" styleClass="login-field" promptText="Email"/>

        <!-- Password field -->
        <PasswordField fx:id="passwordField" styleClass="login-field" promptText="Password"/>

        <!-- Error label -->
        <Label fx:id="errorLabel" styleClass="login-error" text="" wrapText="true"/>

        <!-- Login button -->
        <Button fx:id="loginButton" styleClass="login-btn" text="Login" maxWidth="Infinity"
                onAction="#handleLogin"/>

        <!-- Spacer -->
        <Label prefHeight="4"/>

        <!-- Sign Up link -->
        <Label styleClass="login-link" text="Don't have an account? Sign Up"/>
    </VBox>
</StackPane>
